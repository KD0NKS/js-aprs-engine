{
    "name": "js-aprs-engine",
    "version": "1.0.0",
    "description": "Engine for bundling libraries and settings to run an APRS application.",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "tsc",
        "setup": "npm install",
        "test": "npm run build && nyc --reporter=text --reporter=lcov mocha dist/test/**/*.test.js",
        "test-only": "mocha dist/test/**/*.test.js",
        "test-report": "nyc npm run test-only && nyc report --reporter=text-lcov | coveralls",
        "tsc": "./node_modules/.bin/tsc"
    },
    "keywords": [
        "APRS",
        "ham radio",
        "amateur radio"
    ],
    "author": "afairhurst",
    "license": "ISC",
    "dependencies": {
        "@types/pouchdb": "^6.3.3",
        "@types/pouchdb-adapter-memory": "^6.1.3",
        "pouchdb-adapter-memory": "^7.0.0",
        "pouchdb-node": "^7.0.0"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.6",
        "@types/node": "^11.12.2",
        "chai": "^4.2.0",
        "coveralls": "^3.0.3",
        "istanbul": "^0.4.5",
        "mocha": "^6.0.2",
        "mocha-lcov-reporter": "^1.3.0",
        "nyc": "^13.3.0",
        "typescript": "^3.3.3333"
    }
}