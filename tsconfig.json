{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": false,
        "preserveConstEnums": true,
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "index.ts"
        , "src/**/*"
        , "test/**/*"
    ],
    "exclude": [ "bin", "coverage", "node_modules", "dist", ".nyc_output" ]
}