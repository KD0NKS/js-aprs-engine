{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": false,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "forceConsistentCasingInFileNames": true,
        "strict": false
    },
    "include": [
        "typings/gif.d.ts"
        , "src/**/*"
        , "test/**/*"
        , "index.ts"
        , "inversify.config.ts"
    ],
    "exclude": [
        "bin",
        "coverage",
        "node_modules",
        "dist",
        ".nyc_output"
    ]
}